{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "removeComments": true,
        "allowUnreachableCode": true,
        "noImplicitUseStrict": true,
        "diagnostics":false,
        "pretty": true,
        "outDir": "./build",
        "sourceMap": true
    },
    "include": [
        "./**/*.ts"
    ]
}